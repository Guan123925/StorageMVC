
<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta name="renderer" content="webkit">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1,maximum-scale=1,user-scalable=no" />
    <link rel="stylesheet" type="text/css" href="~/admin/layui/css/layui.css" />
    <link rel="stylesheet" type="text/css" href="~/admin/css/admin.css" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <style>
        #tbod td {
            height: 40px;
            width: 5px;
        }

        #tbod th {
            height: 40px;
            width: 5px;
        }
    </style>

</head>
<body>
    <div>
        @RenderBody()
    </div>
    <div class="page-content-wrap" style="background-image: url('../../css/31890b2b14fdcd4c40b27576259ef9c4.jpg');width:100%;height:100px;">
        <div @*class="layui-form" action=""*@ style="margin-top:50px">
            <div class="layui-form-item">
                <div class="layui-inline tool-btn" style="float:left">
                    <button class="layui-btn layui-btn-small layui-btn-normal addBtn hidden-xs" onclick="ProjectAdd()"><i class="layui-icon">&#xe654;</i>新增</button>
                </div>
                <div @*class="layui-inline"*@ style="float:left">
                    <span style="margin-left:20px;">项目编号：</span>
                    <input type="text" name="title" placeholder="请输入项目编号" style="height:30px;width:100px;margin-left:20px;" id="txtNumber">
                    <span style="margin-left:20px;">项目状态：</span>
                    <select id="SelectMent" style="height:30px;width:100px;margin-left:20px;">
                        <option value="-1">请选择</option>
                        <option value="0">进行中</option>
                        <option value="1">已完成</option>
                        <option value="2">已延期</option>
                    </select>
                </div>
                <input type="button" style="color:white;background-color:dodgerblue;margin-left:80px;height:35px;width:80px;" value="搜索" onclick="GetProject()" />
            </div>
        </div>
        <div class="layui-form" id="table-list" style="margin-top:50px">
            <table class="layui-table" lay-even lay-skin="nob" id="tbod">
                @*<colgroup>
                        <col width="50">
                        <col class="hidden-xs" width="50">
                        <col class="hidden-xs" width="100">
                        <col>
                        <col width="80">
                        <col width="150">
                    </colgroup>*@
                <thead>
                    <tr>
                        <th>序号</th>
                        <th>项目编号</th>
                        <th>项目名称</th>
                        <th>项目负责人</th>
                        <th>当前阶段</th>
                        <th>项目状态</th>
                        <th>开始日期</th>
                        <th>操作</th>
                    </tr>
                </thead>
                <tbody id="tbo">
                    @*<tr>
                            <td>1</td>
                            <td>0001</td>
                            <td>健康小窝项目</td>
                            <td>吴亦凡</td>
                            <td>需求对接</td>
                            <td style="color:paleturquoise">进行中</td>
                            <td>2018-08-08</td>
                            <td>
                                <button class='layui-btn layui-btn-mini table-list-status layui-btn-warm' disabled autocomplete='off'>跟进</button>
                                <button class="layui-btn layui-btn-small layui-btn-danger del-btn" >删除</button>
                                <button s >详情</button>
                            </td>
                        </tr>*@
                </tbody>
            </table>
            <div style="margin-top:100px;margin-left:1100px;">
                <button style="height:30px;width:50px;" class='layui-btn layui-btn-mini layui-btn-normal table-list-status'>首页</button>
                <button style="height:30px;width:50px;margin-left:50px;" class='layui-btn layui-btn-mini layui-btn-normal table-list-status'>上一页</button>
                <button style="height:30px;width:50px;margin-left:50px;" class='layui-btn layui-btn-mini layui-btn-normal table-list-status'>下一页</button>
                <button style="height:30px;width:50px;margin-left:50px;" class='layui-btn layui-btn-mini layui-btn-normal table-list-status'>尾页</button>
            </div>
        </div>
    </div>
    <script src="~/admin/layui/layui.js" type="text/javascript" charset="utf-8"></script>
    <script src="~/admin/js/common.js" type="text/javascript" charset="utf-8"></script>
</body>
</html>
